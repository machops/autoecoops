{
  "name": "contracts-l1-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "AI-driven contract management and analysis platform - Modern monorepo architecture",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:platform-1": "cd platforms/platform-1 && pnpm run dev",
    "dev:api": "cd platforms/platform-1 && pnpm run dev:api",
    "dev:web": "cd platforms/platform-1 && pnpm run dev:web",
    "build": "turbo run build",
    "build:platform-1": "cd platforms/platform-1 && pnpm run build",
    "build:api": "cd platforms/platform-1 && pnpm run build:api",
    "build:web": "cd platforms/platform-1 && pnpm run build:web",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "turbo run type-check",
    "db:studio": "pnpm -C packages/database run studio",
    "db:migrate": "pnpm -C packages/database run migrate",
    "db:seed": "pnpm -C packages/database run seed",
    "docker:dev": "docker compose -f docker/docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.dev.yml down",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "cd platforms/platform-1 && pnpm run db:migrate",
    "db:seed": "cd platforms/platform-1 && pnpm run db:seed",
    "db:studio": "cd platforms/platform-1 && pnpm run db:studio",
    "docker:dev": "cd platforms/platform-1 && pnpm run docker:dev",
    "docker:down": "cd platforms/platform-1 && pnpm run docker:down",
    "setup:platform-1": "cd platforms/platform-1 && pnpm run setup",
    "analyze:bundle": "turbo run analyze:bundle"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.8.1",
    "turbo": "^2.8.7",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "axios": ">=1.6.0"
    }
  }
}
