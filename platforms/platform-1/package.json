{
  "name": "contracts-l1",
  "version": "1.0.0",
  "private": true,
  "description": "AI驅動的契約管理與分析平台 - 支援漸進式架構演進",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@contracts-l1/web",
    "dev:api": "turbo run dev --filter=@contracts-l1/api",
    "dev:worker": "turbo run dev --filter=@contracts-l1/worker",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@contracts-l1/web",
    "build:api": "turbo run build --filter=@contracts-l1/api",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "echo \"E2E tests are not configured for platform-1. Please refer to the documentation.\" && exit 0",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "turbo run type-check",
    "db:migrate": "cd packages/database && pnpm run migrate",
    "db:migrate:prod": "cd packages/database && pnpm run migrate:prod",
    "db:seed": "cd packages/database && pnpm run seed",
    "db:studio": "cd packages/database && pnpm run studio",
    "db:generate": "cd packages/database && pnpm run generate",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.dev.yml down",
    "setup": "bash scripts/setup/setup-dev.sh",
    "clean": "turbo run clean && rm -rf node_modules",
    "analyze:bundle": "turbo run analyze:bundle"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "axios": ">=1.6.0"
    }
  }
}
